# .env.example
# Cosmic API credentials
COSMIC_BUCKET_SLUG=your-bucket-slug
COSMIC_READ_KEY=your-read-key
COSMIC_WRITE_KEY=your-write-key

# JWT Authentication (required for Cosmic-based auth)
# Generate a secure random string for JWT_SECRET (minimum 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# NextAuth.js Configuration (if using NextAuth)
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-key-minimum-32-characters

# Auth Debug Logging (set to 1 to enable verbose logging)
LOG_AUTH=0

# Production environment variables
NODE_ENV=production
VERCEL_URL=your-vercel-app-url.vercel.app